#include <stdlib.h>
#include <time.h>
/* more headers goes there */

/* Main -  entry point */
int main(void)
{
  int n;
  srand(time(0));
  n = rand() - RAND_MAX / 2;

  /* setting a condition for an output */
  if (n > 0)
  {
    puts("is positive");
  }
  else if (n == 0)
  {
    puts("is zero");
  }
  else
  {
    puts("is negative");
  }
  return (0);
}
